{
  "name": "in2code/powermail-cond",
  "type": "typo3-cms-extension",
  "description": "Add conditions (via AJAX) to powermail forms for fields and pages",
  "keywords": [
    "TYPO3",
    "extension",
    "powermail"
  ],
  "homepage": "https://www.in2code.de",
  "authors": [
    {
      "name": "Alexander Kellner",
      "email": "alexander.kellner@in2code.de",
      "role": "Developer",
      "homepage": "https://www.in2code.de"
    }
  ],
  "license": "GPL-2.0+",
  "require": {
    "typo3/cms-core": ">=6.2.0,<7.9.99",
    "typo3-ter/powermail": ">=2.24.0,<3.99.99"
  },
  "autoload": {
    "psr-4": {
      "In2code\\PowermailCond\\": "Classes"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "In2code\\PowermailCond\\Tests\\": "Tests",
      "TYPO3\\CMS\\Core\\Tests\\": ".Build/vendor/typo3/cms/typo3/sysext/core/Tests/",
      "TYPO3\\CMS\\Fluid\\Tests\\": ".Build/vendor/typo3/cms/typo3/sysext/fluid/Tests/"
    }
  },
  "replace": {
    "powermail_cond": "self.version",
    "typo3-ter/powermail-cond": "self.version"
  },
  "config": {
    "vendor-dir": ".Build/vendor",
    "bin-dir": ".Build/bin"
  },
  "scripts": {
    "post-autoload-dump": [
      "mkdir -p .Build/Web/typo3conf/ext/",
      "[ -L .Build/Web/typo3conf/ext/powermail_cond ] || ln -snvf ../../../../. .Build/Web/typo3conf/ext/powermail_cond"
    ]
  },
  "extra": {
    "branch-alias": {
      "dev-master": "3.2.x-dev"
    },
    "typo3/cms": {
      "cms-package-dir": "{$vendor-dir}/typo3/cms",
      "web-dir": ".Build/Web"
    }
  }
}
